@using SkillTreeHw1.Models.ViewModels
@model SkillTreeHw1.Models.AccountBook
@{
    ViewBag.Title = "Home Page";
    //var CategoryList = ViewData["Categories"] as List<SelectListItem>;
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<div class="well">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">類別</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.Categoryyy, EnumHelper.GetSelectList(typeof(Category)), "支出/收入", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Categoryyy, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="money" class="col-sm-2 control-label">金額</label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="money" placeholder="金額">*@
                    @Html.EditorFor(model => model.Amounttt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amounttt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">日期</label>
                <div class="col-sm-10">
                    @*<input type="text" class="form-control" id="date" placeholder="日期">*@
                    @Html.EditorFor(model => model.Dateee, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dateee, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">備註</label>
                <div class="col-sm-10">
                    @*<textarea class="form-control" id="description">
                        </textarea>*@
                    @Html.TextAreaFor(model => model.Remarkkk, new {  @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Remarkkk, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        </div>
        
    }
</div>


@Html.Action("AccountBookList", "Home")